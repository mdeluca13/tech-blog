<h2 class="card-header text-center">Your Dashboard</h2>
{{#each posts as |post|}}
<a href="/dashboard/{{post.post_id}}" style="text-decoration:none">
    <div class="container-fluid">
        <div class="row justify-content-center">
            <div class="card col-9">
                <h5 class="card-header" style="color:black">{{post.title}}</h5>
                <div class="card-body">
                    <h5 class="card-title" style="color:black">{{post.content}}</h5>
                    <p class="card-text" style="color:black">Posted By: {{post.user.username}} on {{post.created}}</p>
                </div>
            </div> 
        </div>  
    </div>
</a>
{{/each}}
{{#if post.comments}}
    <section class="card">
      <div class="card-header">
        <h6>Comments</h6>
      </div>

      <div class="card-body">
        {{#each post.comments}}
          <div>
            <p>
              {{comment}}
            </p>
            <p>
              &mdash; {{user.username}}, {{created}}
            </p>
          </div>
        {{/each}}
      </div>
    </section>
  {{/if}}
<a href="/dashboard/{{post.id}}" style="text-decoration:none">
    <div class="container-fluid">
        <div class="container-fluid" style="width: 30%">
            <div class="row justify-content-center text-center">
                <a href="/user/post">
                    <button type="button" class="btn btn-dark">Add New Post</button>
                </a>
            </div>
        </div>
    </div>
</a>