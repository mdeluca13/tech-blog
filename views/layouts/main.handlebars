{{!-- Main page for rendering other handlebars pages --}}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3"
      crossorigin="anonymous"
    />
    <link rel="stylesheet" href="/css/style.css">
    <title>The Tech Blog</title>
</head>
<body>
    {{!-- Nav Bar with links --}}
    <nav class="navbar navbar-dark bg-dark navbar-expand-lg bg-body-tertiary">
        <div class="container-fluid">
            <a class="navbar-brand" href="/">The Tech Blog</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link active" aria-current="page" href="/">Home</a>
                    </li>
                    {{!-- if logged in can go to dashboard, if not logged in go to login --}}
                    <li class="nav-item">
                        {{#if loggedIn}}
                        <a class="nav-link" href="/dashboard">Dashboard</a>
                        {{else}}
                        <a class="nav-link" href="/user/login">Dashboard</a>
                        {{/if}}
                    </li>
                    {{!-- Rendering login if logged out and vice versa --}}
                    <li class="nav-item">
                        {{#if loggedIn}}
                        <a class="nav-link" id="logout">Logout</a>
                        {{else}}
                        <a class="nav-link" href="/user/login">Login</a>
                        {{/if}}
                    </li>
                </ul>
            </div>
        </div>
    </nav>
    {{!-- Adding body for other pages --}}
    <main>
        <div class="body container-fluid">
            {{{body}}}
        </div>
    </main>
    {{#if loggedIn}}
        <script src="/js/logout.js"></script>
    {{/if}}
</body>
</html>